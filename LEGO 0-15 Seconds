#include <kipr/botball.h>

void drive_forward(int distance);
void drive_backward(int distance);
void rightturn(int degrees);
void leftturn(int degrees);

int main()
{
     //add wait for light and stop in 118 secs
    enable_servos();
    set_servo_position(3,600);
    drive_forward(47);
    leftturn(90);
    drive_forward(72);
    drive_backward(20);
    rightturn(90);
    drive_forward(10);
    leftturn(90);
    drive_forward(20);
    leftturn(90);
    drive_forward(10);
    msleep(10);
    set_servo_position(3,1615);
    drive_forward(50);
    disable_servos();
    ao();
    return 0;
}

//int seconds or unit forward? using encoders? so void function (number of units forward or degrees)
void drive_forward (int distance)
       {
	cmpc(0);
    while(abs(gmpc(0))<distance)
    {
        mav(0,500);
        mav(3,515);
        msleep(distance*152);
    }
       }

void drive_backward (int distance)
{
    cmpc(0);
    while(abs(gmpc(0))<distance)
    {
        mav(0,-500);
        mav(3,-500);
        msleep(distance*152);

    }
}
void rightturn (int degrees)
      {
    cmpc(0);
    while(abs(gmpc(0))<degrees)
    {
	mav(0,500);
	mav(3,-500);
    msleep(degrees*25);
    }
      }
	
void leftturn (int degrees)	
      {
    cmpc(0);
    while(abs(gmpc(0))<degrees)
    {
	mav(0,-500);
	mav(3,515);
    msleep(degrees*25);
    }
      }

